<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.HistoryActivity">

    <android.support.v7.widget.CardView
        android:layout_width="403dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/gambar_barang"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:padding="4dp"
                app:srcCompat="@drawable/kusuka" />
            <TextView
                android:id="@+id/nama_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/gambar_barang"
                android:text="Kusuka"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/harga_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama_barang"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/gambar_barang"
                android:text="Harga Rp.5000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/rating_barang"
                android:layout_width="52dp"
                android:layout_height="20dp"
                android:layout_below="@id/harga_barang"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/gambar_barang"
                android:background="@color/colorPrimary"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="4.7"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/proses"
                android:layout_width="196dp"
                android:layout_height="24dp"
                android:layout_below="@id/rating_barang"
                android:layout_marginLeft="-11dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/gambar_barang"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Status : Dalam proses"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@color/colorAccent"
                android:textStyle="italic" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>