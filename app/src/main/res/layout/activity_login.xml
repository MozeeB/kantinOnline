<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/puteh"
    android:orientation="vertical"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        app:srcCompat="@drawable/kantin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/username_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/capsule"
            android:ems="10"
            android:gravity="center"
            android:hint="Username"
            android:textColor="@color/puteh"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/pass_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/capsule"
            android:ems="10"
            android:textColor="@color/puteh"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/login_log"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/username_log"
            android:layout_alignParentTop="true"
            android:layout_marginTop="139dp"
            android:layout_marginEnd="3dp"
            android:textColor="@color/puteh"
            android:background="@drawable/capsule"
            android:text="Login" />

        <TextView
            android:id="@+id/create_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="13dp"
            android:text="Create Account"
            android:textColor="@color/ic"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/create_log"
            android:layout_alignBottom="@+id/login_log"
            android:layout_marginEnd="-138dp" />

    </RelativeLayout>

</LinearLayout>